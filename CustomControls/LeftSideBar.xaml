<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ig="http://schemas.infragistics.com/xaml" x:Class="CustomControls.LeftSideBar" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Ellipse x:Name="elButton" Grid.Column="1" Fill="#7FFFFFFF" Height="40" Width="40" MouseEnter="Ellipse_MouseEnter_1" MouseLeave="Ellipse_MouseLeave_1" IsHitTestVisible="True" MouseDown="elButton_MouseDown" MouseUp="elButton_MouseUp">
        </Ellipse>
        <StackPanel x:Name="MenuPanel" Grid.Column="0" Orientation="Vertical" Background="Orange"/>
    </Grid>
</UserControl>
