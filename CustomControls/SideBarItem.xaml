<UserControl x:Class="CustomControls.SideBarItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="70" Width="250" FocusManager.FocusedElement="{Binding ElementName=itemGrid}">
    <Grid x:Name="itemGrid" MouseLeave="itemGrid_MouseLeave" IsHitTestVisible="True" MouseEnter="Grid_MouseEnter_1" Background="Orange" Focusable="True" PreviewMouseDown="itemGrid_PreviewMouseDown" PreviewMouseUp="itemGrid_PreviewMouseUp">
        <Label x:Name="lbContent" Content="Test" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 0, 0, 15" FontSize="22" FontWeight="Bold" Foreground="White"/>
        <Line StrokeThickness="3" x:Name="lLine" X1="0" X2="250" Y1="60" Y2="60" Stroke="White" />
    </Grid>
</UserControl>
